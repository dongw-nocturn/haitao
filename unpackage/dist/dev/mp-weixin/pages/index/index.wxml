<view class="page"><scroll-view class="bg-white nav" scroll-x="{{true}}"><view class="flex text-center" style="padding-top:7px;"><block wx:for="{{filterType}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item flex-sub',index==TabCur?'text-orange cur':'']}}" style="position:relative;" data-id="{{index}}" data-event-opts="{{[['tap',[['tabSelect',['$event']]]]]}}" bindtap="__e">{{''+item.title+''}}<block wx:if="{{item.tips}}"><text class="cu-tag badge">{{item.tips}}</text></block></view></block></view></scroll-view><scroll-view style="height:100%;" scroll-y="true" scroll-with-animation="{{true}}" scroll-into-view="{{toView}}" data-event-opts="{{[['scrolltolower',[['lower1',['$event']]]]]}}" bindscrolltolower="__e"><view class="content"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{list.length>0}}"><view class="card"><view class="border-title">{{''+item.shopName+''}}<text class="cuIcon-right"></text></view><block wx:for="{{item.shopList}}" wx:for-item="shopItem" wx:for-index="idx" wx:key="idx"><view class="cardItem"><view class="flex"><image class="shadow" src="{{shopItem.imageSrc}}" mode="aspectFit"></image><view><view><text>{{shopItem.name}}</text><text>{{shopItem.payMoney}}</text></view><text>{{"创建时间:"+shopItem.createTime}}</text><text>{{"锁单时间:"+shopItem.clockTime}}</text><text>支付时间:去支付订单</text></view></view><view class="flex" style="justify-content:flex-end;"><button class="cu-btn round line-black margin-right-sm">再来一单</button><button class="cu-btn round line-orange">分享得500积分</button></view></view></block></view></block></block></view><block wx:if="{{list.length===0}}"><view class="noCard">暂无信息</view></block></scroll-view></view>